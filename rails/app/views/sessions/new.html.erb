<%= render 'layouts/hero' %>

<div class="container">
  <h1>Login</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="mb-3">
      <%= f.label :email, {class: "form-label"} %>
      <%= f.email_field :email, {type: "email", class: "form-control"} %>
    </div>
    <div class="mb-3">
      <%= f.label :password, {class: "form-label"} %>
      <%= f.password_field :password, {type: "password", class: "form-control"} %>
    </div>
    <%= f.submit "Login", {class: "btn btn-primary"} %><br>
  <% end %>
</div>
