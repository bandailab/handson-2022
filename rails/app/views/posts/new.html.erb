<%= render 'layouts/hero' %>

<link rel="stylesheet" href="/assets/simplemde.min.css">
<script src="/assets/simplemde.min.js"></script>
<script>
  var simplemde = new SimpleMDE();
</script>

<div class="container">
  <h1>新規投稿</h1>

  <%= form_with(model: @post, local: true) do |f| %>
    <%= f.label :tag %>
    <br>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <%= tag.label {tag.check_box + tag.text} %>
    <% end %>
    <br>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :article %>
    <%= f.text_area :article %>
    <br>

    <%= f.submit "Add new post", class: "btn btn-primary" %><br>
  <% end %>
</div>
