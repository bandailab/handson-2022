<% provide(:title, 'Sign up') %>

<%= render 'layouts/hero'>
<div class="container">
  <h1>Sign up</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
        <%= f.label :email %><br>
        <%= f.email_field :email %><br>
        <%= f.label :password %><br>
        <%= f.password_field :password %><br>
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation %><br>
        <br>
        <%= f.label :grade %><br>
        <%= f.text_field :grade %><br>
        <%= f.label :research_theme %><br>
        <%= f.text_field :research_theme %><br>
        <%= f.label :introduction %><br>
        <%= f.text_field :introduction %><br>
        <%= f.submit "Create my account", class: "btn btn-primary" %><br>
      <% end %>
    </div>
  </div>
</div>
